{% extends "Blog\BlogBundle::layout.html.twig" %}

{% block page_title %}
	<div class="div-article-title" >
<h2 class="article-title"><i class="fa fa-pencil"></i> Rédiger un nouvel article</h2>
</div>
<!-- Formulaire de saisie d'un nouvel article -->
<form class="generic-form" action="{{ path('blog_blog_addPost') }}" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend><i class="fa fa-sticky-note-o"></i> Nouvel article</legend>
        <ul>
            <li>
                <label for="title">Titre :</label>
                <input type="text" id="title" name="title">
            </li>
                
              
            <li>
                <label class="textarea" for="contents">Article :</label>
                <textarea id="contents" name="contents" rows="15"></textarea>
            </li>
            <li>
                <label for="category">Catégorie :</label>
                
                <select  name="categories">
                    {% for category in categories %}
                    <option value="{{ category.id}}">{{ category.name }}  
                     </option>
                     {% endfor %}
                 </select>

            </li>
              
            <li>
                <button class="button button-primary" type="submit">Enregistrer</button>
                <a class="button button-cancel" href="index.php">Annuler</a>
            </li>
        </ul>
    </fieldset>
</form>
{% endblock %}
